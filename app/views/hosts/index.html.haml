            .tab-content
              #tab-1.tab-pane.active
                .full-height-scroll
                  .table-responsive
                    %table.table.table-striped.table-hover
                      %br
                      %span
                        %button.btn.btn-success.fa.fa-star-o= " #{HostPerson.list_leads.list_favourites.where({nearest_lc_id: session[:user_home_lc]}).count}"
