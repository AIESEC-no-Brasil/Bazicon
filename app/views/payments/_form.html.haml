= form_for payment do |f|
  .form-group
    = f.label :local_committee
    = f.hidden_field :local_committee_id, value: local_committee
    %div= local_committee.try(:humanize)
  .form-group
    = f.label :customer_name, class: "required"
    = f.text_field :customer_name, class: "form-control required"
  .form-group
    = f.label :customer_email, class: "required"
    = f.email_field :customer_email, class: "form-control required"
  .form-group
    = f.label :application_id, class: "required"
    = f.number_field :application_id, class: "form-control required"
  .form-group
    = f.label :program, class: "required"
    = f.select :program,
      Payment.programs.keys.map { |p| [p.upcase, p] },
      {}, { class: "form-control m-b required" }
  .form-group
    = f.label :opportunity_name, class: "required"
    = f.text_field :opportunity_name, class: "form-control required"
  .form-group
    = f.label :tag
    = f.text_field :tag, class: "form-control required", placeholder: "Marcador customizado não obrigatório"
  .form-group
    = f.label :value, class: "required"
    = f.telephone_field :value, class: "form-control required"
  .form-group
    = f.submit "Enviar", class: "form-button"
    = link_to "Voltar", payments_path, class: "link-button"
