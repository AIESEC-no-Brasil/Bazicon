#wrapper.gray-bg
  .wrapper.wrapper-content.animated.fadeInRight.center-block
    .col-xs-12
      .ibox
        .ibox-content
          .row
            .col-xs-10
              %h1
                Pagamentos
            .col-xs-2
              = link_to "Novo Pagamento", new_payment_path, class: "link-button"
          %fieldset{style: "height: auto"}
            #messages
              - flash.each do |name, msg|
                %p
                  = content_tag :div, msg.html_safe, class: name
            .row
              .col-xs-12.b-r
                .table-responsive
                  %table.table.table-striped
                    %thead
                      %tr
                        %th.table-header-link
                          = link_to "Nome do EP", payments_path(order: 'customer_name'), :class => 'table-link'
                        %th 
                          = link_to "ComitÃª Local", payments_path(order: 'local_committee'), :class => 'table-link'
                        %th
                          = link_to "Programa", payments_path(order: 'program'), :class => 'table-link'
                        %th
                          = link_to "Valor", payments_path(order: 'value'), :class => 'table-link'
                        %th
                          = link_to "Status", payments_path(order: 'status'), :class => 'table-link'
                        %th
                          = link_to "Criado em", payments_path(order: 'created_at'), :class => 'table-link'
                    %tbody
                      - payments.each do |payment|
                        %tr
                          %td
                            = link_to payment.customer_name, payment_path(payment), :class => 'table-link'
                          %td= payment.local_committee.humanize
                          %td= payment.program.upcase
                          %td= Money.new(payment.value, "BRL").format
                          %td= enum_l(payment, :status)
                          %td= l(payment.created_at)
                          %td
                            - if payment.created?
                              = link_to 'Excluir',
                                payment_path(payment),
                                data: { confirm: 'Tem certeza?' },
                                method: :delete
            .row
              .col-xs-12.b-r
                = will_paginate payments, renderer: BootstrapPagination::Rails
