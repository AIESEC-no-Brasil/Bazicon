#wrapper.gray-bg
  .wrapper.wrapper-content.animated.fadeInRight.center-block
    .col-xs-12
      .ibox
        .ibox-content
          .row
            .col-xs-10
              %h1
                Pagamentos
            .col-xs-2
              = link_to "Novo", new_payment_path, class: "link-button"
          %fieldset{:style => "height: auto"}
            - flash.each do |name, msg|
              %p
                = content_tag :div, msg.html_safe, class: name
            .row
              .col-xs-12.b-r
                .table-responsive
                  %table.table.table-striped
                    %thead
                      %tr
                        %th Nome do cliente
                        %th ComitÃª local
                        %th Programa
                        %th Valor
                        %th Status
                    %tbody
                      - payments.each do |payment|
                        %tr
                          %td
                            = link_to payment.customer_name, payment_path(payment)
                          %td= payment.local_committee.humanize
                          %td= payment.program.humanize
                          %td= Money.new(payment.value, "BRL").format
                          %td= enum_l(payment, :status)
