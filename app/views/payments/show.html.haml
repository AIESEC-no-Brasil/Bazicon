#wrapper.gray-bg
  .wrapper.wrapper-content.animated.fadeInRight.center-block
    .col-xs-12
      .ibox
        .ibox-content
          %h1
            .fa.fa-user
            Pagamento
          %fieldset{:style => "height: auto"}
            - flash.each do |name, msg|
              %p
                = content_tag :div, msg.html_safe, class: name
            .row
              .col-xs-12.b-r{ "data-payment-information" => "", "data-tag" => payment.tag }
                .col-lg-6
                  .form-group
                    %label= Payment.human_attribute_name :customer_name
                    %p.form-control-static
                      = payment.customer_name
                .col-lg-6
                  .form-group
                    %label= Payment.human_attribute_name :local_committee
                    %p.form-control-static{ "data-local-committee" => payment.local_committee.humanize }
                      = payment.local_committee.humanize
                .col-lg-6
                  .form-group
                    %label= Payment.human_attribute_name :program
                    %p.form-control-static{ "data-local-committee" => payment.program.humanize }
                      = payment.program.humanize
                .col-lg-6
                  .form-group
                    %label= Payment.human_attribute_name :opportunity_name
                    %p.form-control-static{ "data-local-committee" => payment.opportunity_name.humanize }
                      = payment.opportunity_name.humanize
                .col-lg-6
                  .form-group
                    %label= Payment.human_attribute_name :value
                    %p.form-control-static
                      = payment.value
                .col-lg-6
                  .form-group
                    %label= Payment.human_attribute_name :status
                    %p.form-control-static
                      = payment.status.humanize
