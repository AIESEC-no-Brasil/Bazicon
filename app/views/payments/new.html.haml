#wrapper.gray-bg
  .wrapper.wrapper-content.animated.fadeInRight.center-block
    .col-xs-12
      .ibox
        .ibox-content
          %h1
            .fa.fa-user
            Novo Pagamento
          %fieldset{:style => "height: auto"}
            - flash.each do |name, msg|
              %p
                = content_tag :div, msg.html_safe, class: name
            .row
              .col-xs-12.b-r
                = render 'form',
                  user: user,
                  payment: payment
