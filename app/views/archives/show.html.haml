.row.wrapper.border-bottom.white-bg.page-heading
  .col-lg-9
    %h2 Gavetão
    %ol.breadcrumb
      %li
        %a{href: main_url} Home
      %li.active
        %strong Gavetão

.wrapper.wrapper-content
  .row
    .col-lg-3
      .ibox.float-e-margins
        .ibox-content
          .file-manager
            %h5 Apresentar
            %a.file-control.active{href: "#"}Todos
            %a.file-control{href: "#"}PDF
            %a.file-control{href: "#"}Word
            %a.file-control{href: "#"}Excel
            %a.file-control{href: "#"}PPT
            %a.file-control{href: "#"}Imagens
            %a.file-control{href: "#"}Áudio (Roll Call)
            %a.file-control{href: "#"}Vídeos
            %a.file-control{href: "#"}Outros
            .hr-line-dashed
            %h5 Filtros
            .switch
              .onoffswitch
                %input{type: "checkbox", class: "onoffswitch-checkbox", id: "type"}
                  %label{class:"onoffswitch-label", for: "type"}
                    %span.onoffswitch-inner
                    %span.onoffswitch-switch
            %ul.folder-list{style: "padding: 0"}
              %li
                %a{href: "#"}
                  %i.fa.fa-star
                  Público
              %li
                %a{href: "#"}
                  %i.fa.fa-star-o
                  Privado
              %li
                %a{href: "#"}
                  %i.fa.fa-star-half-empty
                  Público e Privado
            %h5.tag-title
              Tags
            %ul.tag-list{style: "padding: 0"}
              - Tag.all.each do |tag|
                %li
                  %a{href: "#"}= tag.name
            %button.btn.btn-default.btn-block Filtrar
            .hr-line-dashed
            %button.btn.btn-primary.btn-block{"data-target" => "#myModal", "data-toggle" => "modal", :type => "button"}Upload
            #myModal.modal.inmodal{"aria-hidden" => "true", :role => "dialog", :tabindex => "-1"}
              .modal-dialog
                .modal-content.animated.bounceInRight
                  .modal-header
                    %button.close{"data-dismiss" => "modal", :type => "button"}
                      %span{"aria-hidden" => "true"} ×
                      %span.sr-only Close
                    %i.fa.fa-cloud-upload.modal-icon
                    %h4.modal-title Upload de arquivos
                  .modal-body
                    .ibox-content
                      .form-group
                        .btn-group
                          =file_field_tag 'attachment',:style => "width:100%",:class =>"btn btn-success"
                          -if @user.get_role != ExpaPerson.roles[:role_other]
                            %br
                            %br
                            %label Permissão do arquivo
                            %br
                            %label.control-label{:style => "width:100%;"}
                              .i-checks{:style => "width:50%;float:left;margin-left:auto;margin-right:auto;" }
                                %label
                                  %input{:name => "is_private", :type => "radio", :value => false}
                                    %i
                                    Público
                              .i-checks{:style => "width:50%;float:right;margin-left:auto;margin-right:auto;" }
                                %label
                                  %input{:checked => "", :name => "is_private", :type => "radio", :value => true}
                                    %i
                                    Privado
                        %label.font-noraml{:style => "width:100%;"} Tags relacionadas ao arquivo
                        .input-group{:style => "width:100%;"}
                          %select.chosen-select{ "data-placeholder" => "Escolha uma tag para o arquivo", :multiple => "multiple", :style => "width:'100%';", :tabindex => "4"}
                            - Tag.all.each do |tag|
                              %option{:value => -tag.id}=tag.name
                  .modal-footer
                    %button.btn.btn-success{"data-dismiss" => "modal"}
                      %i.fa.fa-upload
                      Enviar arquivo
.col-lg-9.animated.fadeInRight
  .row
    .col-lg-12
      - @files.each do |file|
        .file-box
          .file
            %a{href: "#"}
              %span.corner

              .image
                %img.img-responsive{alt: "image", src: "#{image_path('p1.jpg')}"}
              .file-name
                = file.name
                %br
                %small Adicionado em:
                = file.created_at.strftime('%dd %bbb %YYYY')
                %small Adicionado por:
                = file.person.xp_full_name.split(' ').first
                %small Entidade:
                = file.office.xp_name
                %small Tipo:
                = file.type_of_file
:javascript
    $(function() {

      $('.i-checks').iCheck({
          checkboxClass: 'icheckbox_square-green',
          radioClass: 'iradio_square-green',
      });

    });

    $(function() {
      var config = {
          '.chosen-select': {},
          '.chosen-select-deselect': { allow_single_deselect: true },
          '.chosen-select-no-single': { disable_search_threshold: 10 },
          '.chosen-select-no-results': { no_results_text: 'Oops, nothing found!' },
          '.chosen-select-width': { width: "95%" }
      }
      for (var selector in config) {
          $(selector).chosen(config[selector]);
      }
    });
